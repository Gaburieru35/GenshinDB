@model IEnumerable<GenshinDB.Models.Characters>

<div>
    <h2>Characters</h2>
</div>

<div class="row">
    @foreach (var character in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="@character.CharacterImageURL" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@character.CharactersName</h5>
                <p class="card-text">@character.CharacterDescription</p>
                <a href="#" class="btn btn-primary">Details</a>
            </div>
        </div>
    }
</div>