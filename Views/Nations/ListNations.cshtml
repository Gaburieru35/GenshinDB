@model IEnumerable<GenshinDB.Models.Nations>

<div>
    <h2 style="margin-top:8px;">Nations</h2>
</div>

<ul class="cards">
@foreach (var nation in Model)
{
    <a class="card" asp-controller="#" asp-action="#" asp-route-id="#">
            <img style="width:100%; height:100px;" src="#" class="card__image" alt="" />
            <div class="card__overlay">
                <div class="card__header">
                    <svg class="card__arc" xmlns="http://www.w3.org/2000/svg"><path /></svg>
                    <div class="card__header-text">
                        <h3 class="card__title">@nation.NationName </h3>
                    </div>
                </div>
                <p class="card__description">@nation.NationDescription</p>
            </div>
        </a>
}
</ul>